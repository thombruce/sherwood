<article class="content-item<% if date.is_some() { %> blog-post<% } %>">
    <h2><a href="/<%= url %>"><%= title %></a></h2>
    <% if let Some(date) = date { %>
        <p class="post-date"><%= date %></p>
    <% } %>
    <% if let Some(excerpt) = excerpt { %>
        <p class="post-excerpt"><%- excerpt %></p>
    <% } %>
</article>