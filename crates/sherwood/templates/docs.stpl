<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <% if let Some(css_file) = css_file { %>
        <link rel="stylesheet" href="<%= css_file %>">
    <% } %>
</head>
<body<%= body_attrs %>>
    <div class="docs-layout">
        <% if let Some(breadcrumbs) = breadcrumb_data { %>
            <div class="docs-breadcrumb">
                <%+ crate::partials::Breadcrumb::new(breadcrumbs) %>
            </div>
        <% } %>
        
        <div class="docs-container">
            <aside class="docs-sidebar">
                <% if let Some(sidebar_nav) = sidebar_nav { %>
                    <%+ crate::partials::SidebarNav::new(sidebar_nav) %>
                <% } %>
                
                <% if let Some(toc) = table_of_contents { %>
                    <nav class="docs-toc">
                        <h3>Table of Contents</h3>
                        <%- toc %>
                    </nav>
                <% } %>
            </aside>
            
            <main class="docs-main">
                <div class="docs-content">
                    <%- content %>
                </div>
                
                <% if let Some(nav) = next_prev_nav { %>
                    <nav class="docs-next-prev">
                        <%+ crate::partials::NextPrevNav::new(nav) %>
                    </nav>
                <% } %>
            </main>
        </div>
    </div>
</body>
</html>