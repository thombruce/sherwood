<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= title %> | <%= site_title %></title>
    
    <% if let Some(css_file) = css_file { %>
      <link rel="stylesheet" href="<%= css_file %>">
    <% } %>
  </head>

  <body<%= body_attrs %>>
    <header>
      <span><%= site_title %></span>

      <nav>
        <ol>
          <li>
            <a href="/">Home</a>
          </li>
        </ol>
      </nav>
    </header>

    <main>
        <% if let Some(breadcrumbs) = breadcrumb_data { %>
            <%+ crate::partials::Breadcrumb::new(breadcrumbs) %>
        <% } %>
        
        <%- content %>
        
        <% if let Some(list) = list_data { %>
            <div class="content-list">
                <% for item in list.items { %>
                    <%+ crate::partials::ContentItem::from(item.clone()) %>
                <% } %>
            </div>
        <% } %>
    </main>

    <footer>
      <% if let Some(footer) = footer_text { %>
        <%= footer %>
      <% } %>
    </footer>
  </body>
</html>
