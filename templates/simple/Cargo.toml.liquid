[package]
name = "{{ project-name }}"
version = "0.1.0"
edition = "2024"
description = "A simple static site powered by Sherwood"
authors = ["{{ authors }}"]
license = "MIT"
keywords = ["ssg", "static", "blog", "markdown", "web"]
categories = ["web-programming", "development-tools"]

[workspace]

[[bin]]
name = "ssg"
path = "src/main.rs"

[dependencies]
sherwood = "0.3.0"
clap = { version = "4.0", features = ["derive"] }
tokio = { version = "1.0", features = ["full"] }
